.detail_view swiper {
  height: 570rpx;
}
.detail_view swiper image {
  width: 100%;
}
.detail_view .base-info {
  margin-top: 30rpx;
  padding: 0 16rpx;
  color: #999;
  border-bottom: 10rpx solid #f2f5f8;
}
.detail_view .base-info .info-title {
  font-size: 32rpx;
  color: #222;
}
.detail_view .base-info .price {
  margin-top: 20rpx;
}
.detail_view .base-info .price .new-price {
  font-size: 48rpx;
  color: var(--color-high-text);
}
.detail_view .base-info .price .old-price {
  font-size: 26rpx;
  margin-left: 10rpx;
  text-decoration: line-through;
}
.detail_view .base-info .price .discount {
  font-size: 24rpx;
  padding: 4rpx 10rpx;
  color: #fff;
  background-color: var(--color-high-text);
  border-radius: 16rpx;
  margin-left: 10rpx;
  position: relative;
  top: -16rpx;
}
.detail_view .base-info .columns {
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
  font-size: 26rpx;
  color: #999999;
  line-height: 60rpx;
  border-bottom: 2rpx solid rgba(100, 100, 100, 0.1);
}
.detail_view .base-info .services {
  display: flex;
  justify-content: space-around;
  line-height: 120rpx;
}
.detail_view .base-info .services .info-service-item {
  font-size: 26rpx;
  flex: 1;
  font-size: 24rpx;
  height: 120rpx;
  color: #333;
  overflow: hidden;
}
.detail_view .base-info .services .info-service-item image {
  height: 28rpx;
  width: 28rpx;
  vertical-align: -4rpx;
}
.detail_view .shop-info {
  padding: 50rpx 16rpx;
  border-bottom: 10rpx solid #f2f5f8;
}
.detail_view .shop-info .shop-top {
  height: 90rpx;
  line-height: 90rpx;
}
.detail_view .shop-info .shop-top image {
  height: 90rpx;
  width: 90rpx;
  border-radius: 50%;
  border: 2rpx solid rgba(0, 0, 0, 0.1);
  vertical-align: -29rpx;
}
.detail_view .shop-info .shop-top text {
  display: inline-block;
  margin-left: 20rpx;
  font-size: 32rpx;
}
.detail_view .shop-info .shop-middle {
  display: flex;
  margin-top: 30rpx;
  align-items: center;
}
.detail_view .shop-info .shop-middle .middle-left {
  flex: 1;
  display: flex;
  text-align: center;
  color: #333;
  border-right: 2rpx solid rgba(0, 0, 0, 0.1);
}
.detail_view .shop-info .shop-middle .middle-left .info-sell-goods {
  flex: 1;
}
.detail_view .shop-info .shop-middle .middle-left .info-sell-goods .count {
  font-size: 36rpx;
}
.detail_view .shop-info .shop-middle .middle-left .info-sell-goods .text {
  margin-top: 20rpx;
  font-size: 24rpx;
}
.detail_view .shop-info .shop-middle .middle-right {
  flex: 1;
  color: #333;
  font-size: 26rpx;
  margin-left: 40rpx;
}
.detail_view .shop-info .shop-middle .middle-right .shop_score {
  margin-top: 20rpx;
  display: flex;
  text-align: center;
  font-size: 26rpx;
}
.detail_view .shop-info .shop-middle .middle-right .shop_score :nth-child(n) {
  flex: 1;
}
.detail_view .shop-info .shop-middle .middle-right .shop_score .score {
  color: #5ea732;
}
.detail_view .shop-info .shop-middle .middle-right .shop_score .high-score {
  color: #f13e3a;
}
.detail_view .shop-info .shop-middle .middle-right .shop_score .better {
  background-color: #5ea732;
  color: #fff;
  padding: 8rpx;
  text-align: center;
}
.detail_view .shop-info .shop-middle .middle-right .shop_score .isbetter {
  background-color: #f13e3a;
}
.detail_view .shop-info .shop-bottom {
  margin: 20rpx;
  text-align: center;
}
.detail_view .shop-info .shop-bottom .enter-shop {
  font-size: 28rpx;
  display: inline-block;
  background-color: #f2f5f8;
  width: 300rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 20rpx;
}
.detail_view .goods-info {
  padding: 40rpx 0;
  border-bottom: 10rpx solid #f2f5f8;
}
.detail_view .goods-info .info-desc {
  padding: 0 30rpx;
}
.detail_view .goods-info .info-desc .start,
.detail_view .goods-info .info-desc .end {
  height: 2rpx;
  width: 180rpx;
  background-color: #a3a3a5;
  position: relative;
}
.detail_view .goods-info .info-desc .start {
  float: left;
}
.detail_view .goods-info .info-desc .end {
  float: right;
}
.detail_view .goods-info .info-desc .start::before,
.detail_view .goods-info .info-desc .info-desc .end::after {
  content: '';
  position: absolute;
  width: 10rpx;
  height: 10rpx;
  background-color: #333;
  bottom: 0;
}
.detail_view .goods-info .info-desc .end::after {
  right: 0;
}
.detail_view .goods-info .info-desc .desc {
  padding: 30rpx 0;
  font-size: 28rpx;
}
.detail_view .goods-info image {
  width: 100%;
}
.detail_view .param_table {
  padding: 40rpx 30rpx;
  font-size: 28rpx;
  border-bottom: 10rpx solid #f2f5f8;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.detail_view .param_table .param_tr {
  flex: 1;
  display: flex;
  justify-content: space-between;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid rgba(100, 100, 100, 0.1);
}
.detail_view .param_table .param_tr view {
  flex: 1;
  display: flex;
  align-items: center;
}
.detail_view .param_table .param_tr .info_key {
  flex-shrink: 0;
  flex-grow: 0;
  flex-basis: 170rpx;
}
.detail_view .comment_view {
  padding: 10rpx 24rpx;
  color: #333;
  border-bottom: 10rpx solid #f2f5f8;
}
.detail_view .comment_view .comment-top {
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.1);
}
.detail_view .comment_view .comment-top .title {
  float: left;
  font-size: 30rpx;
}
.detail_view .comment_view .comment-top .more {
  float: right;
  margin-right: 20rpx;
  font-size: 26rpx;
}
.detail_view .recommend_view .info-header {
  line-height: 80rpx;
  padding-left: 16rpx;
  font-size: 30rpx;
  color: var(--color-text);
}
.detail_view .bottom-bar {
  position: fixed;
  height: 58px;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  display: flex;
}
.detail_view .bottom-bar .bar-item {
  flex: 1;
  text-align: center;
  font-size: 30rpx;
}
.detail_view .bottom-bar .bar-item .iconfont {
  padding-top: 10rpx;
  font-size: 42rpx;
}
.detail_view .bottom-bar .shopping-cart,
.detail_view .bottom-bar .purchase {
  flex-grow: 1.5;
  line-height: 58px ;
  text-align: center;
}
.detail_view .bottom-bar .shopping-cart {
  background-color: #ffe6e8;
  color: var(--color-high-text);
}
.detail_view .bottom-bar .purchase {
  background-color: var(--color-high-text);
  color: #fff;
}
.detail_view .cover {
  position: fixed;
  background: #000;
  left: 0;
  top: 0;
  bottom: 0;
  width: 100%;
  opacity: 0.3;
  z-index: 10;
}
.detail_view .sku_view {
  height: 800rpx;
  width: 750rpx;
  z-index: 100;
  position: fixed;
  bottom: -800rpx;
  background-color: #fff;
}
.detail_view .sku_view .sku-top {
  height: 5.5rem;
}
.detail_view .sku_view .sku-top .img-container {
  float: left;
  position: relative;
  width: 8rem;
  height: 5.5rem;
}
.detail_view .sku_view .sku-top .img-container image {
  position: absolute;
  bottom: 0.5rem;
  margin-left: 40rpx;
  margin-right: 40rpx;
  padding-top: -80rpx;
  width: 5.5rem;
}
.detail_view .sku_view .sku-top .sku-info {
  float: left;
  flex-direction: column;
  justify-content: center;
  font-size: 26rpx;
  line-height: 1;
}
.detail_view .sku_view .sku-top .sku-info view {
  flex: 1;
  line-height: 1.3;
}
.detail_view .sku_view .sku-top .sku-info .price {
  font-size: 2rem;
}
.detail_view .sku_view .sku-top .sku-info .price::before {
  content: 'ï¿¥';
  font-size: 20rpx;
  float: left;
  margin-top: 0.5rem;
}
.detail_view .sku_view .sku-top .icon-x1 {
  float: right;
  margin-top: 1rem;
  margin-right: 1.2rem;
  width: 1.2rem;
}
.detail_view .sku_view .sku-middle {
  margin: 20rpx 20rpx 0;
  height: 15rem;
  display: flex;
  flex-direction: column;
  font-size: 26rpx;
  justify-content: space-between;
}
.detail_view .sku_view .sku-middle .color-info {
  flex: 1;
}
.detail_view .sku_view .sku-middle .color-info .color-list {
  display: flex;
  align-content: space-between;
  flex-wrap: wrap;
}
.detail_view .sku_view .sku-middle .sizes-info {
  flex: 1;
}
.detail_view .sku_view .sku-middle .sizes-info .sizes-list {
  display: flex;
  flex-wrap: wrap;
}
.detail_view .sku_view .sku-middle .count-num {
  flex: 1;
}
.detail_view .sku_view .sku-middle .count-num .num-button {
  display: flex;
  width: 7rem;
  margin-top: 10rpx;
  background-color: #fff;
  border: #c2c2c2 1rpx solid;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 40rpx;
  text-align: center;
  border-radius: 8rpx;
}
.detail_view .sku_view .sku-middle .count-num .num-button view {
  flex: 1;
}
.detail_view .sku_view .sku-middle .count-num .num-button .num-center {
  border: solid 2rpx #c2c2c2;
  border-top: 8rpx solid transparent;
  border-bottom: 8rpx solid transparent;
  display: flex;
}
.detail_view .sku_view .sku-middle .count-num .num-button .num-center input {
  background: none;
  outline: none;
  border: 0rpx;
  text-align: center;
  width: 100%;
  font-size: 30rpx;
  height: auto;
}
.detail_view .sku_view .sku-middle .count-num .num-button .num_active {
  color: var(--color-high-text);
}
.detail_view .sku_view .sku-middle .color-size-btn {
  flex-shrink: 1;
  margin: 10rpx 20rpx 10rpx 0rpx;
  background-color: #fff;
  border: #c2c2c2 1rpx solid;
  padding: 10rpx;
  font-size: 24rpx;
  border-radius: 8rpx;
}
.detail_view .sku_view .sku-middle .active {
  color: var(--color-high-text);
  border: var(--color-high-text) 2rpx solid !important;
}
.detail_view .sku_view .sku-bottom {
  height: 3.5rem;
  position: absolute;
  bottom: 0;
  width: 100%;
  line-height: 3.5rem;
  text-align: center;
  background-color: var(--color-high-text);
  color: #fff;
}
